<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <size android:height="1dp" /> <!-- Height of the border -->
    <solid android:color="@android:color/transparent"/> <!-- Transparent background -->
    <stroke
        android:width="0dp"
        android:color="@android:color/transparent"/> <!-- No border on sides/top -->
    <padding
        android:bottom="1dp"/> <!-- Optional padding -->
    <layer-list>
        <item android:bottom="0dp">
            <shape android:shape="rectangle">
                <solid android:color="@color/gray_300"/> <!-- Border color -->
                <size android:height="1dp"/>
            </shape>
        </item>
    </layer-list>
</shape>
