<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:clipToPadding="false"
    android:background="@color/white">

    <!-- Parent Horizontal Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Left side: Classroom name + details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvClassroomName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Classroom Name"
                android:textSize="16sp"
                android:textColor="@color/gray_900"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <!-- Students + Assessments Row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Students -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_user"
                        app:tint="@color/gray_600"/>

                    <TextView
                        android:id="@+id/tvStudentsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 students"
                        android:textColor="@color/gray_600"
                        android:textSize="12sp"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>

                <!-- Assessments -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_book"
                        app:tint="@color/gray_600"/>

                    <TextView
                        android:id="@+id/tvAssessmentsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 assessments"
                        android:textColor="@color/gray_600"
                        android:textSize="12sp"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Right side: Edit & Delete icons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end|center_vertical">

            <ImageView
                android:id="@+id/ivEdit"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:contentDescription="Edit Student"
                app:srcCompat="@drawable/ic_edit"
                android:scaleType="centerInside"/>

            <ImageView
                android:id="@+id/ivDelete"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:contentDescription="Delete Student"
                app:srcCompat="@drawable/ic_delete"
                android:scaleType="centerInside"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
